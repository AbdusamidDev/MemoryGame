<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText,UseCompoundDrawables,ContentDescription">

    <LinearLayout
        android:id="@+id/liner_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/line_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_access_time_24" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/android_logo"
        app:layout_constraintBottom_toTopOf="@id/image_3"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image_2"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        app:layout_constraintWidth_percent="0.35"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/android_logo"
        app:layout_constraintBottom_toTopOf="@id/image_4"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintLeft_toRightOf="@id/image_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        app:layout_constraintWidth_percent="0.35" />

    <ImageView
        android:id="@+id/image_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/android_logo"
        app:layout_constraintBottom_toTopOf="@id/image_5"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image_4"
        app:layout_constraintTop_toBottomOf="@id/image_1"
        app:layout_constraintWidth_percent="0.35" />

    <ImageView
        android:id="@+id/image_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/android_logo"
        app:layout_constraintBottom_toTopOf="@id/image_6"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintLeft_toRightOf="@id/image_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_2"
        app:layout_constraintWidth_percent="0.35" />

    <ImageView
        android:id="@+id/image_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/android_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image_6"
        app:layout_constraintTop_toBottomOf="@id/image_3"
        app:layout_constraintWidth_percent="0.35" />

    <ImageView
        android:id="@+id/image_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/android_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintLeft_toRightOf="@id/image_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_4"
        app:layout_constraintWidth_percent="0.35" />

</androidx.constraintlayout.widget.ConstraintLayout>